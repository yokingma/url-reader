{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
    // "noEmit": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "tsconfig.build.json",
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "jest.config.js"
  ]
}